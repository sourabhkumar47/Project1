<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.LoginFragment">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/note_logo"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Notes"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take notes, keep track of tasks, and organize\n your life. All in one place."
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:paddingTop="15dp"
        android:fontFamily="sans-serif"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_in_btn_background"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="Sign in with Google"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By continuing, you agree to our Terms of Service and\n Privacy Policy."
        android:textSize="14sp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:fontFamily="sans-serif"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        />

</LinearLayout>